<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Main">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etxtOrganizacion"
        android:layout_alignTop="@+id/textView2"
        android:layout_weight="1"
        android:text="Organización:"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/etxtNombre"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Escriba su nombre"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etxtNombre"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Nombre:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etxtOrganizacion"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Escriba su organización"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etxtCorreo"
        android:layout_alignTop="@+id/textView5"
        android:layout_weight="1"
        android:text="Correo electrónico:"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etxtApellido"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Apellido:"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="Registro de soporte técnico"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxtApellido"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Escriba su apellido"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/etxtEdad"
        android:layout_weight="3"
        android:text="Sexo:"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAgregar"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Edad:"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/etxtCorreo"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/etxtApellido"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Escriba su correo"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:onClick="Click"
        android:text="Agregar" />

    <EditText
        android:id="@+id/etxtEdad"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnAgregar"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Escriba su edad"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/rdgGenero"
        android:layout_width="186dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbHombre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Hombre" />

        <RadioButton
            android:id="@+id/rdbMujer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mujer" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/centos" />

</RelativeLayout>